<div class="pb-24">
    <% if (hero) { %>
    <div class="relative w-full h-[85vh] md:h-screen mb-8 group overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img src="<%= hero.cover %>" class="w-full h-full object-cover object-center md:object-top transform scale-100 group-hover:scale-105 transition-transform duration-[10s] ease-linear">
        </div>
        
        <div class="absolute inset-0 bg-gradient-to-t from-[#141414] via-[#141414]/40 to-transparent z-10"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-[#141414] via-[#141414]/60 to-transparent z-10"></div>

        <div class="absolute bottom-0 left-0 w-full z-20 px-4 md:px-12 pb-24 md:pb-40">
            <div class="max-w-3xl space-y-4" data-aos="fade-up">
                <div class="flex items-center gap-2 mb-2">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/0/08/Netflix_2015_N_logo.svg" class="w-4 md:w-5">
                    <span class="text-xs md:text-sm font-bold tracking-[0.2em] text-gray-300">SERIES</span>
                </div>
                
                <h1 class="text-4xl md:text-7xl font-black text-white leading-none drop-shadow-2xl">
                    <%= hero.title %>
                </h1>

                <div class="flex items-center gap-3 text-sm font-medium text-green-400">
                    <span><%= hero.rating %></span>
                    <span class="text-gray-300"><%= hero.year %></span>
                    <span class="border border-gray-500 px-1 text-xs text-gray-300 rounded">HD</span>
                </div>

                <p class="text-gray-300 text-sm md:text-lg line-clamp-3 md:line-clamp-2 max-w-2xl drop-shadow-md">
                    <%= hero.intro %>
                </p>

                <div class="flex items-center gap-3 pt-4">
                    <a href="/series/<%= hero.id %>" class="spa-link bg-white text-black px-8 py-3 rounded hover:bg-opacity-90 transition font-bold flex items-center gap-2 text-lg">
                        <i class="fas fa-play"></i> Play
                    </a>
                    <a href="/series/<%= hero.id %>" class="spa-link bg-gray-500/40 backdrop-blur-md text-white px-8 py-3 rounded hover:bg-gray-500/50 transition font-bold flex items-center gap-2 text-lg">
                        <i class="fas fa-info-circle"></i> More Info
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <% collections.forEach((col, idx) => { %>
        <div class="mb-10 px-4 md:px-12 relative group/row" data-aos="fade-up" data-aos-offset="100">
            <h2 class="text-lg md:text-xl font-bold text-gray-200 mb-3 hover:text-white transition-colors cursor-pointer flex items-center gap-2">
                <%= col.title %> <i class="fas fa-chevron-right text-xs opacity-0 group-hover/row:opacity-100 transition-opacity text-blue-400"></i>
            </h2>
            
            <div class="swiper content-swiper overflow-visible !overflow-x-clip py-4">
                <div class="swiper-wrapper">
                    <% col.items.forEach(item => { %>
                        <div class="swiper-slide w-[120px] md:w-[200px] transition-all duration-300 hover:z-50 hover:scale-110 origin-center">
                            <a href="/series/<%= item.id %>" class="spa-link block aspect-[2/3] bg-gray-800 rounded-md overflow-hidden relative shadow-lg group">
                                <img data-src="<%= item.cover %>" class="swiper-lazy w-full h-full object-cover transition-opacity duration-300">
                                <div class="swiper-lazy-preloader swiper-lazy-preloader-white"></div>
                                
                                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-3">
                                    <div class="flex items-center gap-2 mb-1">
                                        <div class="w-6 h-6 rounded-full bg-white flex items-center justify-center text-black text-xs"><i class="fas fa-play"></i></div>
                                        <span class="text-xs font-bold text-green-400">98% Match</span>
                                    </div>
                                    <p class="text-xs text-gray-300 line-clamp-1"><%= item.tags[0] %></p>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
                <div class="hidden md:flex swiper-button-next !w-12 !h-full !top-0 !right-0 !mt-0 bg-gradient-to-l from-black via-black/50 to-transparent text-white opacity-0 group-hover/row:opacity-100 transition-opacity"></div>
                <div class="hidden md:flex swiper-button-prev !w-12 !h-full !top-0 !left-0 !mt-0 bg-gradient-to-r from-black via-black/50 to-transparent text-white opacity-0 group-hover/row:opacity-100 transition-opacity"></div>
            </div>
        </div>
    <% }); %>
</div>
